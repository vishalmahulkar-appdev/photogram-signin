<h1> Sign up </h1>


<form action="/insert_user_record" method="post">
  <div>
    <label>Username</label>
    <input type="text" name="input_username" placeholder="Enter a username...">
  </div>

  <div> 
    <label>Password</label>
    <input type="password" name="input_password" >
  </div>
  
  <div>
    <label>Password Confirmation</label>
    <input type="text" name="input_password_confirmation" >
  </div>

  <div>
    <label>Private</label>
    <input type="checkbox" name="input_private">
  </div>
  
  <div>
    <button>Sign up</button>
  </div>
  
</form>
  

